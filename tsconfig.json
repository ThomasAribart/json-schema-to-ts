{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "baseUrl": "src",
    "outDir": "lib/types",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["*"]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  },
  "exclude": ["builds", "lib"]
}
